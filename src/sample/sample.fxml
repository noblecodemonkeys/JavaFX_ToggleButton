<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleButton?>
<AnchorPane id="AnchorPane" prefHeight="79.0" prefWidth="125.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/10.0.1" fx:controller="sample.Controller">
    <children>
        <VBox fx:id="buttonBox">
            <Button fx:id="button" layoutX="24.0" layoutY="14.0" onAction="#handleButtonClick" text="Click Me!"/>
            <!--<ToggleButton fx:id="tbutton" layoutX="24.0" layoutY="14.0" onAction="#handleToggleButtonClick"  text="${controller.textToggleValue}"/>-->
            <ToggleButton fx:id="tbutton" layoutX="24.0" layoutY="14.0" text="${controller.textToggleValue}"/>

            <Label fx:id="lblLabel" text="${controller.textValue}" layoutX="24.0" layoutY="52.0"/>
        </VBox>
    </children>
</AnchorPane>
